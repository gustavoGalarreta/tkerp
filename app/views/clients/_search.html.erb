<%= form_tag clients_path, class: "validate", method: :get, remote: true do %>
  <div class="row form-group">
    <div class="col-sm-5">
      <div class="col-sm-4">
        <%= label_tag :name, "Client", class: "control-tag" %>
      </div>
      <div class="col-sm-8">
        <%= text_field_tag :name, nil, class: "form-control" %>
      </div>
    </div>
    <div class="col-sm-5">
      <div class="col-sm-4">
        <%= label_tag :legal_id, "Legal Identification", class: "control-tag" %>
      </div>
      <div class="col-sm-8">
        <%= text_field_tag :legal_id, nil, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-sm-5">
      <div class="col-sm-4">
        <%= label_tag :type, "Type", class: "control-tag" %>
      </div>
      <div class="col-sm-8">
        <%= select_tag :type, options_for_select("Regular" => "regular", "Partner" => "partner"), class: "form-control", prompt: "- Select type -" %>
      </div>
    </div>
    <div class="col-sm-5">
      <div class="col-sm-4">
        <%= label_tag :partner_id, "Partner", class: "control-tag" %>
      </div>
      <div class="col-sm-8">
        <%= select_tag :partner_id, options_from_collection_for_select(Client.partner, :id, :name), class: "form-control", prompt: "- Select type -" %>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="col-sm-12">
          <input class="btn btn-default pull-right" type="submit" value="Search">
      </div>
    </div>
  </div>
<% end %>