<div class="form-group col-sm-12">
  <div class="form-group col-sm-6">
    <%= f.label :first_name, class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= f.text_field :first_name, class: "form-control validate[required]" %>
    </div>
  </div>
  <div class="form-group col-sm-6">
    <%= f.label :last_name, class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= f.text_field :last_name, class: "form-control validate[required]" %>
    </div>
  </div>
</div>
<div class="form-group col-sm-12">
  <div class="form-group col-sm-6">
    <%= f.label :dni, class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= f.text_field :dni, class: "form-control validate[required, custom[validDNI]]" %>
    </div>
  </div>
  <div class="form-group col-sm-6">
    <%= form.label :relationship, class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= form.select :type, class_enum_for_select("Relationship", "type"), {prompt: '- Select a relationship -'}, class: "form-control" %>
    </div>
  </div>
</div>
<div class="form-group col-sm-12">
  <div class="form-group col-sm-6">
    <%= f.label :phone, class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= f.text_field :phone, class: "form-control" %>
    </div>
  </div>
  <div class="form-group col-sm-6">
    <%= f.label :mobile, class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= f.text_field :mobile, class: "form-control validate[required]" %>
    </div>
  </div>
</div>
