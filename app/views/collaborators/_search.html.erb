<%= form_tag collaborators_path, class: "validate", method: :get, remote: true do %>
  <div class="row form-group">
    <div class="col-sm-6">
      <div class="col-sm-4">
        <%= label_tag :name, nil, class: "control-tag" %>
      </div>
      <div class="col-sm-8">
        <%= text_field_tag :name, nil, class: 'form-control' %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="col-sm-4">
        <%= label_tag :birthday_month, "Birthday", class: "control-tag" %>
      </div>
      <div class="col-sm-8">
        <select id="birthday_month" name="birthday_month" class="form-control">
          <option value>- Select month -</option>
          <option value="1">January</option>
          <option value="2">February</option>
          <option value="3">March</option>
          <option value="4">April</option>
          <option value="5">May</option>
          <option value="6">June</option>
          <option value="7">July</option>
          <option value="8">August</option>
          <option value="9">September</option>
          <option value="10">October</option>
          <option value="11">November</option>
          <option value="12">December</option>
        </select>
      </div>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-sm-6">
      <div class="col-sm-4">
        <%= label_tag :last_name, nil, class: "control-tag" %>
      </div>
      <div class="col-sm-8">
        <%= text_field_tag :last_name, nil, class: 'form-control' %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="col-sm-4">
        <%= label_tag :start_date, "Strating day", class: "control-tag" %>
      </div>
      <div class="col-sm-8">
        <%= text_field_tag :start_date, nil, class: 'datepicker form-control' %>
      </div>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-sm-12">
      <div class="col-sm-12">
        <input class="btn btn-default pull-right" type="submit" value="Search">
      </div>
    </div>
  </div>
<% end %> 