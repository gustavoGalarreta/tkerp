<div class="form-group col-sm-12">
  <div class="form-group col-sm-6">
    <%= form.label :first_name, class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= form.text_field :first_name, class: "form-control validate[required]" %>
    </div>
  </div>
  <div class="form-group col-sm-6">
    <%= form.label :last_name, class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= form.text_field :last_name, class: "form-control validate[required]" %>
    </div>
  </div>
</div>
<div class="form-group col-sm-12">
  <div class="form-group col-sm-6">
    <%= form.label :dni, "DNI", class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= form.text_field :dni, class: "form-control validate[required, custom[validDNI]]" %>
    </div>
  </div>
  <div class="form-group col-sm-6">
    <%= form.label :dni_scan, class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= render "helpers/file_field_with_preview", file_field: :dni_scan, form: form %>
    </div>
  </div>
</div>

<div class="form-group col-sm-12">
  <% if form.object.dni_scan? %>
    <div class="form-group col-sm-6"></div>
    <div class="form-group col-sm-6">
      <%= form.label :current_file, class: "col-sm-4 text-left"%>
      <div class="col-sm-6">
        <%= render "helpers/preview_file", object: form.object, file: :dni_scan %>
      </div>
    </div>
  <% end %>
</div>

<div class="form-group col-sm-12">
  <div class="form-group col-sm-6">
    <%= form.label :birthday, class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= form.text_field :birthday, class: "datepicker form-control validate[required]" %>
    </div>
  </div>
  <div class="form-group col-sm-6">
    <%= form.label :certificate, class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= render "helpers/file_field_with_preview", file_field: :certificate, form: form %>
    </div>
  </div>
</div>

<div class="form-group col-sm-12">
  <% if form.object.certificate? %>
    <div class="form-group col-sm-6"></div>
    <div class="form-group col-sm-6">
      <%= form.label :current_file, class: "col-sm-4 text-left"%>
      <div class="col-sm-6">
        <%= render "helpers/preview_file", object: form.object, file: :certificate %>
      </div>
    </div>
  <% end %>
</div>
