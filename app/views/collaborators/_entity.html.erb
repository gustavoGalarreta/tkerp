<div class="form-group col-sm-12">
  <div class="form-group col-sm-6">
    <%= form.label :work_place, class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= form.text_field :name, class: "form-control validate[required]" %>
    </div>
  </div>
  <div class="form-group col-sm-6">
    <%= form.label :work_address, class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= form.text_field :address, class: "form-control validate[required]" %>
    </div>
  </div>
</div>
<div class="form-group col-sm-12">
  <div class="form-group col-sm-6">
    <%= form.label :phone, class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= form.text_field :phone, class: "form-control validate[custom[customPhone]]" %>
    </div>
  </div>
  <div class="form-group col-sm-6">
    <%= form.label :legal_identification, class: "col-sm-4 text-left", id: "legal_id_label" %>
    <div class="col-sm-6">
      <%= form.text_field :legal_id, class: "form-control" %>
    </div>
  </div>
</div>
<div class="form-group col-sm-12">
  <div class="form-group col-sm-6">
    <%= form.label :country_id, class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= form.collection_select :country_id, Country.all, :id, :name,  {prompt: '- Select a country -'}, class: "form-control validate[required]" %>
    </div>
  </div>
  <div class="form-group col-sm-6">
    <%= form.label :category, class: "col-sm-4 text-left" %>
    <div class="col-sm-6">
      <%= form.select :type, class_enum_for_select("Entity", "type"), {prompt: '- Select a category -'}, class: "form-control validate[required]" %>
    </div>
  </div>
</div>